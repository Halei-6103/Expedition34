<%- include('../partials/header', { title: 'Delete review' }) %>
<h1>Delete Review</h1>
<div class="toolbar">
  <a href="/reviews">Reviews</a>
  <a href="/reviews/add" class="primary">Add</a>
  <a href="/reviews/browse" class="primary">Browse</a>
</div>

<p class="subtitle">Select a Review to remove.</p>


<form action="/reviews/delete" method="POST">
  <label>Review ID </label>
 <select name="reviewID" required>
  <option value="">— Select review —</option>

  <% if (reviews && reviews.length) { %>
    <% reviews.forEach(r => { %>
      <option value="<%= r.reviewID %>">
        <%= r.username %> — <%= r.title %> — ★<%= r.rating %> (<%= r.reviewDate %>)
      </option>
    <% }) %>
  <% } %>
</select>

  <button type="submit">Remove Review</button>
</form>


<a href="/reviews" class="back-link">← Back to Reviews</a>
<%- include('../partials/footer') %>
