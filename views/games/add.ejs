<%- include('../partials/header', { title }) %>
<h1><%= title %></h1>
<form action="/games/add" method="post">
  <label>Developer 
    <select name="developers" required><option value="">— Select developer —</option>
  <% if (developers && developers.length) { %>
  <% developers.forEach(d => { %>
    <option value="<%= d.developerID %>"><%= d.developerName %></option>
    <% }); %>
  <% } %> 

  </select></label>
  <label>Title <input type="text" name="gameTitle" required placeholder="Game name" /></label>
  <label>Price <input type="number" name="gamePrice" step="0.01" min="0" required placeholder="0.00" /></label>
  <label>Description <textarea name="gameDescription" rows="4" required placeholder="Short description"></textarea></label>
  <button type="submit">Add game</button>
</form>
<br>
<a href="/games" class="nav-btn">← Back to Games</a>
<%- include('../partials/footer') %>
