<%- include('../partials/header', { title }) %>
<h1><%= title %></h1>
<div class="toolbar">
  <a href="/games">Games</a>
  <a href="/games/add" class="primary">Add</a>
</div>
<% if (games && games.length) { %>
  <div class="data-list">
    <table border="1">
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Ratings</th>
        <th>Description</th>
        <th>Made By</th>
        <th>Delete</th>
      </tr>

      <% games.forEach(g => { %>
       <tr>
        <td> <%= g.title %> </td>
        <td> <%= g.price %> USD </td>
        <td> <%= g.rating %>/5 </td>
        <td> <%= g.description %> </td>
        <TD> <%= g.developerName %> </TD>
        <td>
        <form action="/games/browse" method="POST">
        <input type="hidden" name="gameID" value="<%= g.gameID %>">
        <button type="submit" class="deleteGame">Delete </button></td>
        </form>
       </td>
       </tr>
  <% }) %>

   </table>
  </div>
<% } else { %>
  <div class="empty-state">No games yet. (DB not connected.)</div>
<% } %>
<%- include('../partials/footer') %>
