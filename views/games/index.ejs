<%- include('../partials/header', { title: 'Games' }) %>
<header class="action-page__header">
  <h1>Games</h1>
  <p class="subtitle">Browse, add, update, or delete games.</p>
</header>
<ul class="action-grid" role="list">
  <li>
    <a href="/games/browse" class="action-card">
      <span class="action-card__title">Browse</span>
      <p class="action-card__desc">View all games</p>
    </a>
  </li>
  <li>
    <a href="/games/add" class="action-card">
      <span class="action-card__title">Add</span>
