<%- include('../partials/header', { title }) %>
<h1><%= title %></h1>
<div class="toolbar">
  <a href="/purchases">Purchases</a>
  <a href="/purchases/add" class="primary">Add</a>
</div>

<% if (purchases && purchases.length) { %>
  <div class="data-list">
    <table border="1">
      <tr>
        <th>Username</th>
        <th>Game</th>
        <th>Date (PST)</th>
        <th>Price</th>
      </tr>

      <% purchases.forEach(p => { %>
       <tr>
        <td> <%= p.username %> </td>
        <td> <%= p.title %> </td>
        <td> <%= p.purchaseDate %> </td>
        <td> <%= p.purchasePrice %> USD </td>
       </tr>
  <% }) %>

   </table>
  </div>
<% } else { %>
  <div class="empty-state">No purchases yet. (DB not connected.)</div>
<% } %>
<%- include('../partials/footer') %>
